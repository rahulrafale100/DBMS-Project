<!DOCTYPE html>
<html lang="en">
<head>
  <title>Study Planner-WA Dashboard</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<body style="background-color:cornsilk">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">My Courses</a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <% data.forEach(function(val){%>
                      <li><a class="dropdown-item" href="">
                          <%= val.cid %>
                        </a></li>
                      <%})%>
                  </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="Add">Add courses</a>
            </li>
      
              
            </ul>
                  <a class="nav-link" href="logout">Logout</a>
        </div>
      </div>
  </nav>
  

<div class="container">
    <div class="row" >
        <div class="col-md-3 border-right" style="background-color: bisque;">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="100px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                <span class="font-weight-bold"><%=usname[0].username%></span>
                <span class="text-black-50">amdin@gmail.com</span>
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                    <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                    </svg> 9777640958
                </span>
                <address>
                    NITC<br>
                    Box 564, Disneyland<br>
                    INDIA<br>
                    764047
                </address>
            </div>
            
        </div>
        <div class="col-sm">
            <div class="navbar-menu-wrapper d-flex align-items-top"> 
                <ul class="navbar-nav">
                  <li class="nav-item font-weight-semibold d-none d-lg-block ms-0">
                    <h1><span class="text-black fw-bold">National Institute of Technology</span></h1>
                    <br>
                  </li>
                </ul>
            </div>
            <form action="/Faculty" method="POST">
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1"  class="form-label">Enter event Details</label>
                            <span >
                            <input type="text" name='topic' class="form-control" id="exampleInputEmail1" placeholder="Topic Name " aria-describedby="emailHelp">
                            <br>
                            <input type="text" name='time' class="form-control" id="exampleInputEmail1" placeholder="Date and Time" aria-describedby="emailHelp">
                          </span>
                          </div>
                        <br>
                        <div class="input-group mb-3" >
                            <div class="input-group-prepend">
                              <label class="input-group-text" for="inputGroupSelect01">Course</label>
                            </div>
                            <select name="opt"class="custom-select" id="inputGroupSelect01">
                              <option selected>Choose...</option>
                              <% data.forEach(function(val){%>
                                <option value=<%=val.cid%>><%=val.cid%></option>
                                <%})%>
                            </select>
                        </div>
                        <br>
                        <div class="input-group mb-3" >
                            <div class="input-group-prepend">
                              <label class="input-group-text" for="inputGroupSelect01">Event type</label>
                            </div>
                            <select name="opt1" class="custom-select" id="inputGroupSelect01">
                              <option selected>Choose...</option>
                              <option value="1">assignment</option>
                              <option value="2">quiz</option>
                              <option value="3">lecture</option>
                              <option value="4">Exams</option>
                            </select>
                        </div>
                        <div class="container" style="margin-top: 30px;">
                            <div class="row">
                              <div class="col">
                                <button type="submit" class="btn btn-primary">Submit</button>
                              </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm"></div>
                </div>
                
            </form>
            
        </div>
      </div>
</div>

</body>
</html>
